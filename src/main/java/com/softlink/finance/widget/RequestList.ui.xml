<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:p2="urn:import:com.softlink.finance.widget">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.header {
		    background: #eee;
		    border-bottom: 1px solid #666;
		    padding: 0.5em;
	  	}
	  	.cellTable {
	  		background-color: lemonchiffon;	
	  	}
	</ui:style>

	
	<g:DockLayoutPanel unit="EM">
		 <g:south size="2.4">
			<g:AbsolutePanel styleName="{style.header}">
				<g:at left="0" top="0">
					<c:SimplePager ui:field="pager"/>
				</g:at>
				<g:at left="215" top="0">
					<g:Image url="resource/trashicon.png" width="28px" height="30px" ui:field="image" title="Delete Request"/>
				</g:at>
			</g:AbsolutePanel>
		</g:south>
		<g:center>
			<g:ScrollPanel ui:field="scrollpanel">
				<c:CellTable ui:field="cellTable" pageSize="13" width="100%" styleName="{style.cellTable}" height="100%"/>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 