  		</g:AbsolutePanel>
  	</g:north>
  	<g:center>
  		<g:ScrollPanel ui:field="scrollpanel">
  			<p1:CellTable ui:field="draftcellTable" width="100%" styleName="{style.cellTable}" height="100%" pageSize="13"/>
  		</g:ScrollPanel>
  	</g:center>
  	<g:south size="16.7">
  		<g:AbsolutePanel styleName="header" ui:field="composebox">
