  			</g:at>
  			<g:at left="373" top="81">
  				<g:TextBox width="115px" height="10px" ui:field="currency" readOnly="true"/>
  			</g:at>
  			<g:at left="97" top="123">
  				<g:IntegerBox width="119px" height="16px" ui:field="real_amount"/>
