  xmlns:mail='urn:import:com.softlink.finance.widget' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
  .detail {
    border: 1px solid #666;
    background-color: white;
  }

  .header {
    background: #eee;
    border: 1px solid #666;
    padding: 0.5em;
  }
  
  .title {
  	font-weight: bold;
  }
  
  .sendbutton{
  	color: White;
  	border: 1px solid Silver;
  	background-color: #cc3333;
  }
  
  .boxchat {
  	color: Gray;
  	border: 1px solid Gray;
  	background-color: White;
  }
  
  .cellTable {
 	background-color: lemonchiffon;	
  }
  </ui:style>

<g:ScrollPanel width="100%" height="100%">
  <g:DockLayoutPanel unit='EM' styleName='{style.detail}' ui:field="docklayoutpanel" height="478px" width="99.85%">
  	<g:north size="3.0">
