<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:com.softlink.finance.widget' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
  .detail {
    border: 1px solid #666;
    background-color: white;
  }

  .header {
    background: #eee;
    border: 1px solid #666;
    padding: 0.5em;
  }
  
  .title {
  	font-weight: bold;
  }
  
  .cellTable {
 	background-color: lemonchiffon;	
  }
  </ui:style>

<g:ScrollPanel width="100%" height="100%">
  <g:DockLayoutPanel unit='EM' styleName='{style.detail}' ui:field="docklayoutpanel" height="478px" width="99.85%">
  	<g:north size="3.0">
  		<g:AbsolutePanel styleName='{style.header}' ui:field="headerpanel">
  			<g:at left="10" top="10">
  				<g:Label text="Trash" styleName="{style.title}"/>
  			</g:at>
  			<g:at left="925" top="10">
  				<p1:SimplePager ui:field="pager"/>
  			</g:at>
  		</g:AbsolutePanel>
  	</g:north>
  	<g:center>
  		<g:ScrollPanel ui:field="table">
  			<p1:CellTable ui:field="cellTable" width="100%" styleName="{style.cellTable}" height="100%" pageSize="13"/>
  		</g:ScrollPanel>
  	</g:center>
  </g:DockLayoutPanel>
  </g:ScrollPanel>

</ui:UiBinder>
