  			</g:MenuItem>
  			<g:MenuItemSeparator/>
  			<g:MenuItem text="Support"/>
  		</g:MenuBar>
  	</g:at>
  	<g:at left="1092" top="10">
  		<g:Label ui:field="userlabel" text="You are not sign in!" styleName="loginlabel" width="247px" height="16px" horizontalAlignment="ALIGN_RIGHT"></g:Label>
