  <!-- IE6 cannot handle transparent png, which is what ImageResource creates -->

  <ui:style>
  .statusDiv {
    text-align: right;
    margin: 1em;
  }

  .linksDiv {
    text-align: right;
  }
  
  .label{
  	color: Gray;
  }
	
  .relate {
	position: absolute;
	left: 655px;
	color: Gray;
	font-size: 12px;
  }
  
  .cellTable {
	background-color: lemonchiffon;	
  }
  </ui:style>

  <g:AbsolutePanel width="1340px">
