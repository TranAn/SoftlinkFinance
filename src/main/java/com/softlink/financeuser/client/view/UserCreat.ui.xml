<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			color: Red;
			
		}
	</ui:style>
	<g:AbsolutePanel width="100%" height="100%" styleName="background">
		<g:at left="34" top="26">
			<g:Label text="User: " styleName="tableStyle"/>
		</g:at>
		<g:at left="79" top="22">
			<g:TextBox width="143px" height="12px" ui:field="username"/>
		</g:at>
		<g:at left="34" top="67">
			<g:Label text="Role:" styleName="tableStyle"/>
		</g:at>
		<g:at left="79" top="63">
			<g:ListBox width="100px" height="20px" ui:field="role"/>
		</g:at>
		<g:at left="34" top="115">
			<g:Button text="Creat User" ui:field="creatuserButton"/>
		</g:at>
		<g:at left="34" top="167">
			<g:Label text="New user has been created!" styleName="{style.important}" ui:field="infolabel"/>
		</g:at>
		<g:at left="132" top="115">
			<g:Button width="100px" height="28px" text="Refresh" ui:field="refreshButton"/>
		</g:at>
		
	</g:AbsolutePanel>
</ui:UiBinder> 