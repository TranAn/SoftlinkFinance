<?xml version="1.0" encoding="UTF-8" standalone="no"?><web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

 <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>ERPproject.html</welcome-file>
    <welcome-file>FinancialModule.html</welcome-file>
    <welcome-file>UserService.html</welcome-file>
  </welcome-file-list>
  
  <!-- StartUp Servlets -->
  <servlet>
    <servlet-name>StartUpServlet</servlet-name>
    <servlet-class>com.softlink.financedatastore.server.StartUpServletImpl</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <!-- Home Servlets -->
  <servlet>
    <servlet-name>Home-userservice</servlet-name>
    <servlet-class>com.softlink.financehome.server.UserServicesImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home-userservice</servlet-name>
    <url-pattern>/financehome/userservice</url-pattern>
  </servlet-mapping> 
  
  <!-- Financial Module Servlets -->
  <servlet>
    <servlet-name>Financial-financialrequirementsImpl</servlet-name>
    <servlet-class>com.softlink.finance.server.FinanceRequirementsObjImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Financial-financialrequirementsImpl</servlet-name>
    <url-pattern>/finance/financialrequirementsImpl</url-pattern>
  </servlet-mapping> 
  
  <servlet>
    <servlet-name>Financial-userservice</servlet-name>
    <servlet-class>com.softlink.finance.server.UserServicesImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Financial-userservice</servlet-name>
    <url-pattern>/finance/userservice</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>Financial-mailservice</servlet-name>
    <servlet-class>com.softlink.finance.server.MailServicesImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Financial-mailservice</servlet-name>
    <url-pattern>/finance/mailservice</url-pattern>
  </servlet-mapping>
  
  <!-- User Module Servlets -->
  <servlet>
    <servlet-name>User-userservice</servlet-name>
    <servlet-class>com.softlink.financeuser.server.UserServicesImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User-userservice</servlet-name>
    <url-pattern>/financeuser/userservice</url-pattern>
  </servlet-mapping> 
  
  <servlet>
    <servlet-name>User-seriuserImpl</servlet-name>
    <servlet-class>com.softlink.financeuser.server.SeriUserObjImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User-seriuserImpl</servlet-name>
    <url-pattern>/financeuser/seriuserImpl</url-pattern>
  </servlet-mapping> 
  
  <!-- System Servlets -->
  <servlet>
    <servlet-name>SystemServiceServlet</servlet-name>
    <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
    <init-param>
      <param-name>services</param-name>
      <param-value/>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>SystemServiceServlet</servlet-name>
    <url-pattern>/_ah/spi/*</url-pattern>
  </servlet-mapping>
  
  <!-- Security Config -->
  <security-constraint>
    <web-resource-collection>
    	<web-resource-name>FinancialModule</web-resource-name>
        <url-pattern>/financial/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
    <web-resource-collection>
    	<web-resource-name>UserService</web-resource-name>
        <url-pattern>/user/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  
  <!-- Filter  -->
  <filter>
    <filter-name>ObjectifyFilter</filter-name>
    <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
  </filter>
  <filter-mapping>
     <filter-name>ObjectifyFilter</filter-name>
     <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>